{
    "name": "Nexus Link Fixer",
    "version": "0.0.1",
    "description": "Fixes old Nexus Mods page links, redirecting to the newer format.",
    "icons": {
        "48": "nmr-48.png",
        "128": "nmr-128.png"
    },
    "manifest_version": 2,
    "permissions": [
        "webRequest",
        "*://*.nexusmods.com/*",
        "*://*.tesnexus.com/*",
        "webRequestBlocking"
    ],
    "background": {
        "scripts": ["background.js"]
    }
}